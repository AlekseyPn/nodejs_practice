<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Sign in</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      <h1>Sign in</h1>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input name="email" id="email" type="text" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Enter Email"></span>
        </div>
        <div class="input-field">
          <input name="password" id="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary" type="submit">Sign in</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      <h1>Register</h1>
      <form action="/auth/register" method="POST">
        <div class="input-field">
          <input name="email" id="new-email" type="text" class="validate" required>
          <label for="new-email">Email</label>
          <span class="helper-text" data-error="Enter Email"></span>
        </div>
        <div class="input-field">
          <input name="name" id="name" type="text" class="validate" required>
          <label for="name">Your name</label>
          <span class="helper-text" data-error="Enter your name"></span>
        </div>
        <div class="input-field">
          <input name="password" id="new-password" type="password" class="validate" required>
          <label for="new-password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>
        <div class="input-field">
          <input name="confirm" id="confirm" type="password" class="validate" required>
          <label for="confirm">Password confirm</label>
          <span class="helper-text" data-error="Confirm password"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary" type="submit">Register</button>
      </form>

    </div>
  </div>
</div>
