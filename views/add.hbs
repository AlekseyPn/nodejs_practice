<h1>Add new course</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input name="title" id="title" type="text" class="validate" required>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>
  <div class="input-field">
    <input name="price" id="price" type="number" class="validate" required min="100">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>
  <div class="input-field">
    <input name="image" id="image" type="text" class="validate" required>
    <label for="image">Image URL</label>
    <span class="helper-text" data-error="Enter URL for image"></span>
  </div>

  <button class="btn btn-primary" type="submit">Add course</button>
</form>
