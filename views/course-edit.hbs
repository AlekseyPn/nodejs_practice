<h1>{{title}}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>
  <div class="input-field">
    <input name="price" id="price" type="number" class="validate" required min="100" value="{{course.price}}">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>
  <div class="input-field">
    <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter URL for image"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn btn-primary" type="submit">Save</button>
</form>

<form class="" action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn red btn-remove">Remove course</button>
</form>
